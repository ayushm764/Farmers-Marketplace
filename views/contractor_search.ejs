          <div class="navbar-nav ms-auto">
            <form action="/searchContractor" method="get" class="d-flex" role="search">
              <input class="form-control me-2 search-inp" type="search" name="query" placeholder="Search by area or bu contractor Name" aria-label="Search" value="<%= query %>">
