

    <style>
        .chat-container {
            width: 100%;
            max-width: 800px;
            margin: auto;
            background: #f8f9fa;
            border-radius: 10px;
            padding: 20px;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
            display: flex;
            flex-direction: column;
            height: 90vh;
        }

        .chat-header {
            text-align: center;
            font-size: 1.5rem;
            margin-bottom: 10px;
            font-weight: bold;
        }

        .chat-box {
            flex-grow: 1;
            max-height: 600px;
            overflow-y: auto;
            padding: 10px;
            background: white;
            border-radius: 8px;
            box-shadow: inset 0 0 5px rgba(0, 0, 0, 0.1);
            display: flex;
            flex-direction: column;
            gap: 8px;
        }

        .message {
            max-width: 70%;
            padding: 10px;
            border-radius: 15px;
            word-wrap: break-word;
            display: inline-block;
        }

        .my-message {
            background: #007bff;
            color: white;
            align-self: flex-end;
            text-align: right;
            border-top-right-radius: 0;
        }

        .their-message {
            background: #e9ecef;
            color: black;
            align-self: flex-start;
            text-align: left;
            border-top-left-radius: 0;
        }

        .message-content {
            font-size: 1rem;
        }

        .message-time {
            font-size: 0.8rem;
            opacity: 0.7;
            display: block;
            margin-top: 5px;
        }

        .unread {
            color: red;
            font-weight: bold;
        }

        .read {
            color: green;
        }

        .message-form {
            display: flex;
            margin-top: 10px;
        }

        .message-form textarea {
            flex: 1;
            padding: 10px;
            border-radius: 5px;
            border: 1px solid #ccc;
        }

        .message-form button {
            background: #007bff;
            color: white;
            border: none;
            padding: 10px 15px;
            margin-left: 5px;
            border-radius: 5px;
            cursor: pointer;
            width: 55px;
        }

        .message-form button:hover {
            background: #0056b3;
        }

        .back-link {
            display: block;
            text-align: center;
            margin-top: 10px;
            font-size: 1rem;
        }
    </style>

    <div class="chat-container">
        <h2 class="chat-header">Chat with <%= receiver.username %>
        </h2>

        <div class="chat-box">
            <% chat.messages.forEach(function(msg) { %>
                <% 
                    senderId=(msg.sender && msg.sender._id) ? msg.sender._id.toString() : msg.sender.toString(); var
                    currentUserId=user._id.toString();
                    messageClass=(senderId===currentUserId) ? 'my-message' : 'their-message' ; %>
                    <div class="message <%= messageClass %>">
                        <p class="message-content">
                            <%= msg.content %>
                        </p>
                        <small class="message-time">
                            <%= new Date(msg.timestamp).toLocaleTimeString([], { hour: '2-digit' , minute: '2-digit' })
                                %>
                                
                        </small>
                    </div>
                    <% }); %>
        </div>

        <form action="/contractor/chat/<%= receiver._id %>" method="POST" class="message-form">
            <textarea name="message" placeholder="Type your message..." required></textarea>
            <button type="submit"><i class="fa-solid fa-paper-plane"></i></button>
        </form>

        <a href="/" class="back-link">â¬… Back to Dashboard</a>
    </div>

    <script>
        function scrollToBottom() {
            const chatBox = document.querySelector(".chat-box");
            chatBox.scrollTop = chatBox.scrollHeight;
        }

        document.addEventListener("DOMContentLoaded", scrollToBottom);

        const messageForm = document.querySelector(".message-form");
        messageForm.addEventListener("submit", function () {
            setTimeout(scrollToBottom, 100);
        });
    </script>